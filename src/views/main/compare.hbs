<section class="intro-section">
    <div class="container2">
        <div class="row align-items-center text center text-md-left">
            <div class="col-md-12 text-center">
                <div style="margin-top: 40px;">
                    <h1 data-aos="fade-up" data-aos-delay="1200" style="font-weight: bold; font-size: 4rem;">Seu score
                        ({{value}}) é superior ao de {{sup.length}} estabelecimentos próximos.</h1>
                    <h1 data-aos="fade-up" data-aos-delay="1400"
                        style="font-size: 2.5rem; font-weight: 200; color: rgb(163, 163, 163)">Acompanhe
                        o relatório abaixo.</h1>
                </div>
            </div>
        </div>
        <div class="row align-items-center text center text-md-left" style="padding: 0px 200px;">
            {{#each close}}

            <div class="col-xs-12 col-sm-6 col-md-4" data-aos="fade-down" data-aos-delay="1800">
                <div class="image-flip">
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card">
                                <div class="card-body text-center">
                                    <span
                                        style="position: absolute; top: 5px; right: 5px; font-weigth: bold; ">{{this.percentage}}/100</span>
                                    <p><img class="avy img-fluid" src="{{this.avatar}}" alt="card image"></p>
                                    <h4 class="card-title">{{this.fantasyName}}</h4>
                                    <p class="card-text">{{this.address}} ({{this.distance}}km)</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
