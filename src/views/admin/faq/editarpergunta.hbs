{{#section 'css'}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
{{/section}}

<h1>{{title}}</h1>
<form action="" role="form" method="POST" id="questionForm">
    <div class="form-group">
        <label for="question">Pergunta</label>
        <input id="question" type="text" class="form-control" value="{{data.question}}" autocomplete="off" name="question"
             required>
    </div>
    <div class="form-group">
        <label for="role">Resposta</label>
        <textarea cols="40" rows="5" id="answer" class="form-control" >{{data.answer}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary my-1">Editar pergunta/resposta</button>
</form>

{{#section 'jquery'}}
<script src="/js/dataTable.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script>

    toastr.options = {
        "closeButton": false,
        "debug": false,
        "newestOnTop": false,
        "progressBar": true,
        "positionClass": "toast-top-right",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    };

    $(function () {
        $('#questionForm').submit(function (evt) {
            evt.preventDefault();
            axios({
                method: 'post',
                url: ``,
                data: {
                    question: $(`#question`).val(),
                    answer: $('#answer').val()
                }
            }).then((response) => {
                var data = response.data;
                if (data.success) {
                    toastr.success('Pergunta editada com sucesso', 'Sucesso');
                } else {
                    toastr.error('Algum erro ocorreu... Tente novamente mais tarde', 'Erro!');
                }
            }, (error) => {
                toastr.error('Algum erro ocorreu... Tente novamente mais tarde', 'Erro!');
            });


        });

    });
</script>

{{/section}}